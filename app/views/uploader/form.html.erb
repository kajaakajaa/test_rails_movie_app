<%= form_with model: @upload_file, url: uploader_upload_path,
  id: "new_upload", class: "new_upload", local: true do |f| %>
  
  <%= f.label :name, "name" %>
  <%= f.text_field :name %>
  <% if @upload_file.errors.messages[:name].any? %>
  <span class= "error"><%= @upload_file.errors.messages[:name][0] %></span>
  <% end %>
  
  <%= f.label :video_file, "動画" %>
  <%= f.file_field :video_file, :accept => "video/*" %>
  <% if @upload_file.errors.messages[:video_file].any? %>
  <span class= "error"><%= @upload_file.errors.messages[:video_file][0] %></span>
  <% end %>

  <%= f.label :thumbnail, "サムネイル" %>
  <%= f.file_field :thumbnail, :accept => "image/*" %>
  <% if @upload_file.errors.messages[:thumbnail].any? %>
  <span class= "error"><%= @upload_file.errors.messages[:thumbnail][0] %></span>
  <% end %>
  
  <%= f.submit "Upload" %>
<% end %>

